FROM jenkins/jenkins

USER root

RUN apt-get update && apt-get install -y python-pip ansible docker vim curl unzip

# Node + NPM
RUN curl -sL https://deb.nodesource.com/setup_6.x -o nodesource_setup.sh && bash nodesource_setup.sh

# Packer
RUN cd /usr/local/bin && sudo curl -O https://releases.hashicorp.com/packer/1.1.0/packer_1.1.0_linux_amd64.zip && unzip packer_1.1.0_linux_amd64.zip && chmod +x packer

RUN apt-get update && apt-get install -y build-essential nodejs

USER jenkins
